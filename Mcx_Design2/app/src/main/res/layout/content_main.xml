<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainMarketWatch.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/button_style">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tablelayout">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablerow0"
                    android:background="@drawable/bhavcopy">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="ProductDetails"
                            android:textStyle="bold|italic"
                            android:paddingStart="20dp"
                            android:textSize="20sp"
                            android:textColor="#ffff"
                            android:padding="10dp"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablerow1"
                    android:background="@color/Header">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/Product"
                            android:text="Symbol"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:paddingStart="20dp"/>




                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/LTP"
                            android:text="@string/LTP"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="-20dp"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="16sp"
                            android:textColor="#fff"
                            android:text="@string/PCP"
                            android:gravity="left"
                            android:id="@+id/PCP" />


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/macvalue"
                            android:text="@string/Value"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#fff"
                            android:gravity="center"/>




                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablerow2"
                    android:background="@color/Header">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/Expiry"
                            android:text="@string/Expiry"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_marginBottom="10dp"
                            android:paddingStart="20dp"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/Change"
                            android:textSize="16sp"
                            android:text="Change"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:layout_marginStart="-30dp"
                            android:gravity="left"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/PercentageChange"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="-10dp"
                            android:text="@string/PercentageChange"
                            android:textColor="#fff"
                            android:gravity="left"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/macvolume"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:text="@string/Volume"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="#fff"
                            android:gravity="center"/>

                </TableRow>

        </TableLayout>



        <ListView
            android:id="@+id/main_List"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tablelayout"
            android:isScrollContainer="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

        </ListView>


</RelativeLayout>
