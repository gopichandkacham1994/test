<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/tablelayout">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablerow1"
                android:background="@color/Tableheader">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Product"
                    android:text="Symbol"
                    android:textStyle="bold"
                    android:textColor="#ffff"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"

                    android:gravity="center"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Expiry"
                    android:layout_weight="1"
                    android:textColor="#ffff"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>
                <!--<TextView-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/TotalQtyTraded"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:text="@string/Unit"-->
                    <!--android:gravity="center"/>-->

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/LTP"
                    android:text="@string/LTP"
                    android:layout_weight="1"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:text="@string/PCP"
                    android:gravity="center"
                    android:id="@+id/PCP" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/PercentageChange"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/PercentageChange"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/BuyPrice1"
                    android:text="@string/BuyPriced1"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/BuyQty1"
                    android:textStyle="bold"
                    android:text="@string/BuyQty1"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/SellPrice1"
                    android:text="@string/SellPrice1"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"/>


                <TextView
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/SellQty1"
                    android:text="@string/SellQty"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>

    </HorizontalScrollView>


</RelativeLayout>