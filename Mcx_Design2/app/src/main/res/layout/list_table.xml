<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_below="@id/spinner"
        android:id="@id/tablelayout"
        android:stretchColumns="*"
        android:background="@drawable/tableborder">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/row1"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Expiryname"
                android:text="@string/Expiry"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0d3481"

                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/LTPname"
                android:text="@string/LTP"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#0d3481"
                />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/PCPname"
                android:text="@string/PCP"
                android:textAlignment="center"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textColor="#0d3481" />


        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/row2"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Expiry"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#0d3481"

                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/LTP"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#0d3481"
                />


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/PCP"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textColor="#0d3481" />





        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/row3"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Timename"
                android:text="Time"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#0d3481"
                android:paddingStart="70dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PercentageChangename"
                android:textStyle="bold"
                android:text="@string/PercentageChange"
                android:layout_weight="1"
                android:paddingStart="50dp"
                android:textColor="#0d3481"/>



        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/row4"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Time"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#0d3481"
                android:paddingStart="70dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PercentageChange"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingStart="-30dp"
                android:textColor="#0d3481"/>


        </TableRow>

    </TableLayout>

</RelativeLayout>